                    <td>{{ bonbon.description }}</td>
                    <td><img src="{{ vich_uploader_asset(bonbon, 'imageFile') }}" alt="Image de bonbons" id="imad"></td>
                    <td>
                        <a href="{{ path('app_bonbons_show', {'id': bonbon.id}) }}">show</a>
                        <a href="{{ path('app_bonbons_edit', {'id': bonbon.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
